<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_punch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="练琴20分钟"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_punch_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_punch_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_punch_title"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:text="上一次练琴是21天前"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/tv_punch_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_punch_last"
        app:layout_constraintLeft_toLeftOf="@id/tv_punch_last"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:text="总共3次累计1小时"
        android:textColor="@color/grey"/>

    <Button
        android:id="@+id/btn_punch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginEnd="20dp"
        android:text="punch"/>

</android.support.constraint.ConstraintLayout>